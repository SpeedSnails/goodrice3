<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">

<HorizontalScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CCC"
            android:onClick="selectFrag"
            android:text="@string/cameraTitle"
            android:textColor="#080"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CCC"
            android:onClick="selectFrag"
            android:text="@string/keyTitle"
            android:textColor="#080"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CCC"
            android:onClick="selectFrag"
            android:text="@string/classTitle"
            android:textColor="#080"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_inter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CCC"
            android:onClick="selectFrag"
            android:text="@string/interTitle"
            android:textColor="#080"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#CCC"
            android:onClick="selectFrag"
            android:text="@string/historyTitle"
            android:textColor="#080"
            android:textSize="20sp" />

    </LinearLayout>
</HorizontalScrollView>

    <fragment
        android:id="@+id/fragment"
        android:name="com.goodrice.goodrice3.CameraFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>